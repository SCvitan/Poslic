<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:background="#B65151"
    app:cardBackgroundColor="#D2D3C7"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nazivPosla"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Naziv Posla"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_lokacija"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Lokacija"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_satnica"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:text="Satnica"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_vidiVise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:text="Vidi viÅ¡e" />


    </LinearLayout>
</androidx.cardview.widget.CardView>